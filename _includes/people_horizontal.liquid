<div class="col mb-4">
  <a href="{% if person.redirect %}{{ person.redirect }}{% else %}{{ person.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if person.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=person.img sizes="(min-width: 768px) 156px, 50vw" alt="person thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if person.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ person.title }}</h3>
            <p class="card-text">{{ person.description }}</p>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
